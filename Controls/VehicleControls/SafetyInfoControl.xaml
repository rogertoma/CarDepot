                    </Grid>
                </GroupBox>

                <GroupBox Header="BREAK DRUMS" Margin="0,15,0,0" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Top" BorderThickness="1">
