<UserControl x:Class="CarDepot.Controls.LogonPageControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" MinWidth="500" MinHeight="400">
    <Grid VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition Height="180" />
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Content="Select User and Enter Password" Grid.Row="0" VerticalAlignment="Stretch" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontSize="25"/>
        <ScrollViewer VerticalScrollBarVisibility="Auto" VerticalContentAlignment="Stretch" Grid.Row="1">
            <WrapPanel x:Name="UsersPanel" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>        
        </ScrollViewer>
    </Grid>
</UserControl>
